public class CopyArray {

    public static void main(String[] args) {
       // Variables hold references to arrays
        int[] numbers = { 3,1 ,4 ,2,5 } ;
        int [] newNumber = numbers;

    // Copy array loop with Variables hold references to copy individual elements one by one
    //    for(int index = 0 ; index < numbers.length; index++){
    //      newNumber[index] = numbers[index];
        //}

        //
        System.arraycopy(numbers ,  0, newNumber  ,destPos:0 ,  numbers.length);

        // int [] arr3 = new [arr1.lenght+ arr2.length];
        // System.arrraycopy( arr1, 0 , arr3 , 0 , arr2.lenght];
        // System.arrraycopy( arr2, 0 , arr3 , 6 , arr2.lenght];


        for (int number : numbers) {
            System.out.println(number);
        }

        System.out.println();


            for (int number : newNumber){
            System.out.println(number);

        }
    }

}
